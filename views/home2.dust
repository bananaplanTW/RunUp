<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/css/global.css">
    <link rel="stylesheet" type="text/css" href="/css/common.css">
    <link rel="stylesheet" type="text/css" href="/css/home.css">
    <link rel="stylesheet" type="text/css" href="/css/basic.css">
    <link rel="stylesheet" type="text/css" href="/css/layout.css">
    <link rel="stylesheet" type="text/css" href="/css/email.css">
    <link rel="stylesheet" type="text/css" href="/css/signup_login.css">
  </head>
  {>"templates/title-favicon"/}
  <body>
    {>"templates/top-banner"/}
    <div class="teaser clear-float mt-50" style="background-image: url('/assets/images/home_page.png')">
      <div class="teaser-introduction">
        <p class="teaser-title">{data.i18n.home.runalone}</p>
        <p class="teaser-title">{data.i18n.home.letsgroup}</p>
        <a class="teaser-button runup-red-box clickable" href="/post">{data.i18n.home.registeryourgroup}</a>
        <p class="teaser-subtitle">{data.i18n.home.teasorsubtitle}</p>
      </div>
    </div>
    <div class="sub-teaser clear-float">
      <div class="sub-teaser-introduction">
        <p class="teaser-title dark-gray">{data.i18n.home.groupinfo}</p>
      </div>
      <img src="/assets/images/search_post.png">
    </div>
    <div class="sub-teaser clear-float">
      <div class="sub-teaser-introduction">
        <p class="teaser-title">{data.i18n.home.notification}</p>
      </div>
      <img src="/assets/images/mobile_app.png">
    </div>
    <div class="sub-teaser clear-float">
      <div class="sub-teaser-introduction">
        <p class="teaser-title dark-gray">{data.i18n.home.management}</p>
      </div>
      <img src="/assets/images/statistic.png">
    </div>
    <div class="sub-teaser clear-float">
      <div class="sub-teaser-introduction">
        <p class="teaser-title">{data.i18n.home.coupon}</p>
      </div>
      <img src="/assets/images/coupon.png">
    </div>

    <div class="sub-teaser clear-float">
      <img src="/assets/images/footer.png">
      <div class="teaser-introduction">
        <a class="teaser-button runup-red-box clickable" href="/post">{data.i18n.home.registeryourgroup}</a>
      </div>
    </div>
    {>"templates/footer"/}
    {>"templates/signup-options"/}
  </body>
  <script type="text/javascript" src="/js/home.js"></script>
  <script type="text/javascript" src="/js/ajax.js"></script>
  <script type="text/javascript" src="/js/common.js"></script>
  <script type="text/javascript" src="/js/signup.js"></script>
  <script type="text/javascript" src="/js/fb-login.js"></script>
  <script type="text/javascript" src="/js/email.js"></script>
</html>