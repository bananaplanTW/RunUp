<!DOCTYPE html>
<html>
  <head>
    
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyCoq2mE4Ywhw2Lw5XzzBeWVc603qgA6RcE&sensor=true"></script>
    <link rel="stylesheet" type="text/css" href="/css/global.css">
    <link rel="stylesheet" type="text/css" href="/css/home.css">
    <link rel="stylesheet" type="text/css" href="/css/google-map.css">
    <link rel="stylesheet" type="text/css" href="/css/common.css">
    <link rel="stylesheet" type="text/css" href="/css/filter.css">
    <link rel="stylesheet" type="text/css" href="/css/basic.css">
    <link rel="stylesheet" type="text/css" href="/css/member.css">
    <link rel="stylesheet" type="text/css" href="/css/group.css">
  </head>
  <body onload="">
    {>"templates/top-banner"/}
    <div class="teaser">
      <div class="discover-photo" style="background-image:url('{data.cover_photo}')"></div>
    </div>
    <div class="main-container center-rail">
      <div class="row description-item">
        <div class="member-title">
          <p>Members</p>
        </div>
        <div class="member-list-container">
          <ul id="member-list">
            {#data.members}
              {>"templates/group-member-icon-list"/}
            {:else}

            {/data.members}
          </ul>
        </div>
      </div>
      <div class="row">
        <div id="group-name" data-lat="{data.lat}" data-lng="{data.lng}" class="description-item group-name">
          <h2>{data.group_name}</h2>
        </div>
        <div class="description-item">
          <p>{data.address}</p>
        </div>
        <div class="description-item">
          <p>{data.contact}</p>
        </div>
      </div>
      <div class="row">
        <div class="col-half">
          <div class="row">
            <div class="description-item">
              <div class="col-4">
                <p>Time</p>
              </div>
              <div class="col-8">
                {#data.schedule}
                  <p>{hour}:{minute} {ampm}, {day}</p>
                {/data.schedule}
              </div>
            </div>
            <div class="description-item">
              <div class="col-4">
                <p>
                  Payment
                </p>
              </div>
              <div class="col-8">
                <p>
                  {?data.payment}
                    {data.payment}
                  {:else}
                    Free to join
                  {/data.payment}
                </p>
              </div>
            </div>
            <!--div class="description-item">
              <div class="col-4">
                <p>Restriction</p>
              </div>
              <div class="col-8">
                <p>Female Only</p>
              </div>
            </div-->
            <div class="description-item">
              <div class="col-4">
                <p>Email</p>
              </div>
              <div class="col-8">
                <p>{data.email}</p>
              </div>
            </div>
            <div class="description-item">
              <div class="col-4">
                <p>Website</p>
              </div>
              <div class="col-8">
                <p>{data.website}</p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-half">
          <div class="row">
            <div class="descrption-area">
              {data.description}
            </div>
          </div>
          <div class="row join-button-container display-table">
            <div class="display-table-cell vertical-align-middle text-align-center">
              {#data.is_member}
              
              {:else}
              <a id="join-button" data-groupid="{data.group_id}" class="join-button">Join</a>
              {/data.is_member}
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="map-container">
          <div id="map-canvas" class="map-canvas"></div>
        </div>
      </div>
    </div>
    
    <div class="footer">
      <div class="copy-right-container">
        <p class="copy-right">Copy rights reserve by Bananaplan</p>
      </div>
    </div>
    {>"templates/signup-options"/}
  </body>
  <script type="text/javascript" src="/js/google-map.js"></script>
  <script type="text/javascript" src="/js/group.js"></script>
  <script type="text/javascript" src="/js/ajax.js"></script>
  <script type="text/javascript" src="/js/join.js"></script>
  <script type="text/javascript" src="/js/signup.js"></script>
  <script type="text/javascript" src="/js/fb-login.js"></script>
</html>