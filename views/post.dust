<!DOCTYPE html>
<html>
  <head>
    
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyCoq2mE4Ywhw2Lw5XzzBeWVc603qgA6RcE&sensor=true"></script>
    <link rel="stylesheet" type="text/css" href="/css/global.css">
    <link rel="stylesheet" type="text/css" href="/css/home.css">
    <link rel="stylesheet" type="text/css" href="/css/google-map.css">
    <link rel="stylesheet" type="text/css" href="/css/common.css">
    <link rel="stylesheet" type="text/css" href="/css/post.css">
    <link rel="stylesheet" type="text/css" href="/css/filter.css">
    <link rel="stylesheet" type="text/css" href="/css/group.css">
    <link rel="stylesheet" type="text/css" href="/css/basic.css">
    <link rel="stylesheet" type="text/css" href="/css/member.css">
  </head>
  <body onload="">
    {>"templates/top-banner"/}
    <div class="main-container">
      <div class="post-group clear-float">
        <div class="col-half pb-50">
          <div class="post-group-section description-item">
            <h2>登錄你的跑團！</h2>
          </div>
          <form id="create-group" action="/post/group" method="POST" enctype="multipart/form-data">
            <div class="post-group-section clear-float">
              <span class="input-title col-4">跑團名稱<em>*</em></span>
              <input id="group-name" class="input-box col-8" type="text" name="group_name" placeholder="愛跑步"/>
            </div>
            <div class="post-group-section clear-float">
              <span class="input-title col-4">跑步地址/位置<em>*</em></span>
              <input id="address" class="input-box col-8" type="text" name="address"placeholder="中正紀念堂"/>
            </div>
            <div class="post-group-section clear-float">
              <span class="input-title col-4">電話<em>*</em></span>
              <input id="contact" class="input-box col-8" type="text" name="contact" placeholder="0000-000-000"/>
            </div>
            <div class="post-group-section clear-float">
              <span class="input-title col-4">Email<em>*</em></span>
              <input id="email" class="input-box col-8" type="text" name="email" placeholder="example@bananaplan.com"/>
            </div>
            <div class="post-group-section clear-float">
              <span class="input-title col-4">描述您的跑團</span>
              <textarea id="description" class="input-box col-8 description" type="text" name="description" row="40" col="3" placeholder="描述您的跑團"></textarea>
              <!--input id="description" class="input-box col-8 description" type="text" name="description"/-->
            </div>
            <div class="post-group-section clear-float">
              <span class="input-title col-4">網站</span>
              <input id="website" class="input-box col-8" type="text" name="website" placeholder="www.example.com"/>
            </div>
            
            <div class="post-group-section clear-float">
              <span class="input-title col-4">費用</span>
              <input id="payment" class="input-box col-8" type="text" name="payment" placeholder="費用資訊，空白為免費"/>
            </div>
            <div class="post-group-section clear-float">
              <input id="lat" class="input-box col-8 display-none" type="text" name="lat"/>
              <input id="lng" class="input-box col-8 display-none" type="text" name="lng"/>
              <input id="city" class="input-box col-8 display-none" type="text" name="city"/>
              <input id="county" class="input-box col-8 display-none" type="text" name="county"/>
              <input id="state" class="input-box col-8 display-none" type="text" name="state"/>
              <input id="state_short" class="input-box col-8 display-none" type="text" name="state_short"/>
              <input id="country" class="input-box col-8 display-none" type="text" name="country"/>
              <input id="country_short" class="input-box col-8 display-none" type="text" name="country_short"/>
            </div>
            <div class="post-group-section clear-float">
              <span class="input-title col-4">封面照片<em>*</em></span>
              <input id="cover-photo" class="col-8 " type="file" name="cover_photo" accept="image/*"/><span class="hint">上限為1mb<span>
            </div>
            <div id="schedule-container" class="post-group-section clear-float">
              <span class="input-title col-4">團跑行程</span>
              <div id="schedule-selector" class="col-8 fl-r">
                <select id="day" name="day" class="input-box day-selector">
                  <option value="0">禮拜日</option>
                  <option value="1">禮拜一</option>
                  <option value="2">禮拜二</option>
                  <option value="3">禮拜三</option>
                  <option value="4">禮拜四</option>
                  <option value="5">禮拜五</option>
                  <option value="6">禮拜六</option>
                </select>
                <select id="ampm" name="ampm" class="input-box time-selector nm-left nm-right">
                  <option value="0">am</option>
                  <option value="1">pm</option>
                </select>
                <select id="hour" name="hour" class="input-box time-selector">
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                  <option value="7">7</option>
                  <option value="8" selected>8</option>
                  <option value="9">9</option>
                  <option value="10">10</option>
                  <option value="11">11</option>
                  <option value="12">12</option>
                </select>:
                <select id="minute" name="minute" class="input-box time-selector">
                  <option value="0">00</option>
                  <option value="15">15</option>
                  <option value="30">30</option>
                  <option value="45">45</option>
                </select>
                <button id="delete-time-slot" class="input-button input-delete-button fl-r clickable display-none">x</button>
              </div>
            </div>
            <div class="post-group-section clear-float">
              <button id="add-time-slot" class="input-button input-add-button col-8 fl-r clickable">+</button>
            </div>
          </form>
          <div class="post-group-section clear-float">
            <button id="submit-button" class="input-button clickable col-8 fl-r">送出!</button>
          </div>
        </div>
        <div class="col-half">
          <div class="map">
            <div id="map-canvas" class="map-canvas"></div>
          </div>
        </div>
      </div>
    </div>

    {>"templates/signup-options"/}
  </body>
  <script type="text/javascript" src="/js/google-map.js"></script>
  <script type="text/javascript" src="/js/ajax.js"></script>
  <script type="text/javascript" src="/js/common.js"></script>
  <script type="text/javascript" src="/js/signup.js"></script>
  <script type="text/javascript" src="/js/fb-login.js"></script>
  <script type="text/javascript" src="/js/post.js"></script>
  {#data.warning}
    <script type="text/javascript">
      alert("{data.warning}");
    </script>
  {/data.warning}
</html>